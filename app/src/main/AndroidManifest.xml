<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tropchop.food.delivery">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name="com.tropchop.food.delivery.FoodDayApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:name="com.tropchop.food.delivery.ui.splash.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tropchop.food.delivery.ui.login.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tropchop.food.delivery.ui.location.LocationDetailsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tropchop.food.delivery.ui.location.LocationSelectActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tropchop.food.delivery.ui.single_restaurant.SingleRestaurantActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.tropchop.food.delivery.ui.home.HomeActivity"
            android:label="@string/title_activity_restaurant_list"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tropchop.food.delivery.ui.cart.CartActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tropchop.food.delivery.ui.checkout.CheckoutActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tropchop.food.delivery.ui.single_menu.SingleMenuActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tropchop.food.delivery.ui.menu_list.MenuListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tropchop.food.delivery.ui.checkout.ThankYouActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>

        <activity
            android:name="com.tropchop.food.delivery.ui.login.SignUpactivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:screenOrientation="portrait"/>
        <activity android:name="com.tropchop.food.delivery.ui.orders.OrderDetailsActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>