<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/location_bg"
    tools:context="com.tropchop.food.delivery.ui.location.LocationSelectActivity">

<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="2dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="2dp">

        <android.support.v7.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/location_select_search"
            android:hint="Type city name here"
            android:iconifiedByDefault="true"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/item_ingredients"
            android:textColor="@color/item_name"
            android:textColorLink="@color/item_ingredients"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:id="@+id/recyclerview_location_select">


        </android.support.v7.widget.RecyclerView>

    </LinearLayout>




</android.support.v7.widget.CardView>

</RelativeLayout>
