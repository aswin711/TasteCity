<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <ImageView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:scaleType="fitXY"
            android:layout_centerVertical="true"
            android:id="@+id/image"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:layout_toRightOf="@+id/image"
            android:layout_marginLeft="5dp">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_18"
                android:id="@+id/name"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16"
                android:id="@+id/cuisines"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_16"
                android:id="@+id/description"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/resturantStatus"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/chip_bg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deliveryTime"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@+id/resturantStatus"
                    android:background="@drawable/chip_orange_bg"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/minOrder"
                    android:textColor="#FFFFFF"
                    android:background="@drawable/chip_orange_bg"
                    android:layout_below="@+id/resturantStatus"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/deliveryFee"
                    android:textColor="#FFFFFF"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/minOrder"
                    android:layout_below="@id/resturantStatus"
                    android:background="@drawable/chip_orange_bg"/>
            </RelativeLayout>
            
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>