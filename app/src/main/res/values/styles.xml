<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="TabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/item_ingredients</item>
    </style>

    <style name="RatingStyle" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/food_rating</item>
        <item name="android:gravity">center</item>
        <item name="android:isIndicator">true</item>
    </style>
    <style name="StatusRestaurantText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:background">@drawable/chip_bg</item>
        <item name="android:textSize">@dimen/status_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="PrimarySmallText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/status_text</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="SecondaryListTitleText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/item_name</item>
        <item name="android:textSize">@dimen/title_size</item>
    </style>
    <style name="SecondaryMediumText" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">@dimen/_12</item>
        <item name="android:textColor">@color/item_ingredients</item>
    </style>

    <style name="RefreshButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@color/item_name</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="CartSubTextAppearence" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/cart_sub</item>
        <item name="android:textSize">@dimen/_16</item>
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <style name="ChipViewStyle" parent="TextAppearance.AppCompat">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="FormStyle" parent="AppTheme">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">@dimen/_16</item>
        <item name="android:textColorHint">@color/textGrey</item>
        <item name="android:editTextColor">@color/textGrey</item>
        <item name="android:editTextBackground">@android:color/transparent</item>
        <item name="android:layout_marginLeft">25dp</item>
    </style>
    <style name="DividerStyle" parent="AppTheme">
        <item name="android:background">@color/backgroundGrey</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>
    <style name="FormButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/_16</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="fontPath">@string/roboto_regular</item>
    </style>
    <style name="PaymentTopWrapperStyle" parent="AppTheme">
        <item name="fontPath">@string/roboto_light</item>
        <item name="android:textSize">@dimen/_16</item>
    </style>

    <style name="TitlePrimaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_16</item>
        <item name="android:textColor">@color/item_name</item>
    </style>

    <style name="TitleSecondaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14</item>
        <item name="android:textColor">@color/item_name</item>
        <item name="fontPath">@string/roboto_light</item>
    </style>
    <style name="SubTitlePrimaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_16</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="SubTitleSecondaryText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/_14</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="TabCellStyle" parent="AppTheme">
        <item name="android:textSize">@dimen/_14</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_column">1</item>
        <item name="android:textColor">@color/item_ingredients</item>
        <item name="android:background">@drawable/table_row_bg</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingRight">6dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="TableCellStyleLeft" parent="TabCellStyle">
        <item name="android:text">@string/_monday</item>
    </style>
    <style name="TableCellStyleLRight" parent="TabCellStyle">
        <item name="android:text">@string/_open_def_hrs</item>
    </style>

    <style name="LoginFormEdit" parent="AppTheme">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/item_name</item>
        <item name="android:textColorHint">@color/item_name</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textSize">18sp </item>
        <item name="fontPath">@string/roboto_light</item>
    </style>
</resources>
